<% layout('layouts/boilerplate') %>

    <div class="container">
        <div class="row">
            <div class="col-6 offset-3">
                <div class="alert alert-danger mt-2" role="alert">
                    <H4 class="alert-heading">
                        <%= err.message %>
                    </H4>
                    <p>An unexpected error occurred</p>
                    <% if(process.env.NODE_ENV !=="production" ) {%>
                        <p>
                            <%= err.stack %>
                        </p>
                        <% } %>
                </div>
            </div>
        </div>
    </div>